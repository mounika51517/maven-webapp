currentBuild.displayName = "demo-#" + currentBuild.number
pipeline{
    agent any
    tools {
        maven 'maven1'
    }
    options {
         buildDiscarder logRotator(daysToKeepStr: '1', numToKeepStr: '3')
    }
    stages{
        stage('package'){
            steps{
                sh script: 'mvn package'
            }
        }
        stage('deploy to nexus'){
            steps{
                script{
                    def pomversion = readMavenPom file: 'pom.xml'
                    def pomfolder = pomversion.version.endsWith("SNAPSHOT") ? "maven-webapp-snapshots" : "maven-webapp-releases"
                    nexusArtifactUploader artifacts: [
                    [
                    artifactId: 'webapp',
                    classifier: '',
                    file: 'target/webapp.war',
                    type: 'war'
                    ]
                    ],
                    credentialsId: 'nexus',
                    groupId: 'com.ravi.web',
                    nexusUrl: '35.173.184.25:8081',
                    nexusVersion: 'nexus3',
                    protocol: 'http',
                    repository: pomfolder,
                    version: "${pomversion.version}"
                }
            }
        }
        stage('deploy to tomcat'){
            sh label: '', script: 'mv target/*.war target/webapp.war'
            sshagent(['tomcat']) {
                sh 
                '''
                ssh -o StrictHostKeyChecking=no target/webapp.war centos@172.31.44.190:/home/centos/apache-tomcat-8.5.54/webapps/
                ssh centos@172.31.44.190 apache-tomcat-8.5.54/bin/shutdown.sh
                ssh centos@172.31.44.190 apache-tomcat-8.5.54/bin/startup.sh
                '''
            }
            
    }
}
