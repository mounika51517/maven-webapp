currentBuild.displayName = "demo-#" + currentBuild.number
pipeline{
    agent any
    tools {
        maven 'maven1'
    }
    stages{
        stage('package'){
            steps{
                sh script: 'mvn package'
            }
        }
        stage('deploy to nexus'){
            steps{
            nexusArtifactUploader artifacts: [
                [
                    artifactId: 'webapp',
                    classifier: '',
                    file: 'target/webapp.war',
                    type: 'war'
                    ]
                    ],
                    credentialsId: 'nexus',
                    groupId: 'com.ravi.web',
                    nexusUrl: '172.31.44.190',
                    nexusVersion: 'nexus3',
                    protocol: 'http',
                    repository: 'maven-webapp-releases',
                    version: '3.2'
            }
        }
    }
}
